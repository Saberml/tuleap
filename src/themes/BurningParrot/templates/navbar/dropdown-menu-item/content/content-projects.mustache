<div class="nav-dropdown-content-projects-adaptable">
    {{# is_there_something_to_filter }}
        <div class="nav-dropdown-content-projects-filter">
            {{# is_member_of_at_least_one_project }}
                <input id="nav-dropdown-content-projects-filter-projects"
                       type="search"
                       class="tlp-search tlp-search-small
                            {{# is_trove_cat_enabled }}nav-dropdown-content-projects-filter-projects-full-width{{/ is_trove_cat_enabled }}"
                       placeholder="{{ filter }}">
            {{/ is_member_of_at_least_one_project }}
            {{# is_trove_cat_enabled }}
                <a href="/softwaremap/trove_list.php" class="tlp-button-primary tlp-button-outline tlp-button-small tlp-button-wide">
                    <i class="fa fa-list tlp-button-icon"></i> {{ browse_all }}
                </a>
            {{/ is_trove_cat_enabled }}
        </div>
    {{/ is_there_something_to_filter }}
    <div class="nav-dropdown-content-projects-lists">
        {{# projects }}
            <div class="nav-dropdown-content-projects-list-project">
                <a href="{{ project_uri }}" class="nav-dropdown-content-projects-list-project-name">
                    <i class="fa fa-fw
                    {{# are_restricted_users_allowed }}
                        {{# is_public }}fa-unlock{{/ is_public }}
                        {{# is_public_incl_restricted }}fa-tlp-unlock-plus-r{{/ is_public_incl_restricted }}
                        {{# is_private }}fa-lock{{/ is_private }}
                        {{# is_private_incl_restricted }}fa-tlp-lock-plus-r{{/ is_private_incl_restricted }}
                    {{/ are_restricted_users_allowed }}
                    {{^ are_restricted_users_allowed }}
                        {{# is_private }}fa-lock{{/ is_private }}
                        {{^ is_private }}fa-unlock{{/ is_private }}
                    {{/ are_restricted_users_allowed }}
                        nav-dropdown-content-projects-list-project-name-access"
                     ></i>{{ project_name }}
                </a>
                {{# user_administers }}
                    <a href="{{ project_config_uri }}" class="nav-dropdown-content-projects-list-project-config"><i class="fa fa-cog"></i></a>
                {{/ user_administers }}
            </div>
        {{/ projects }}
    </div>
    {{# is_project_registration_enabled }}
        <div class="nav-dropdown-content-projects-new">
            <a href="{{ project_registration_url }}" class="tlp-button-primary">
                <i class="fa fa-plus tlp-button-icon"></i> {{ add_project }}
            </a>
        </div>
    {{/ is_project_registration_enabled }}
</div>
