<div class="tabbable" id="svn-administration">
    <h2>{{ title }}</h2>

    {{> global-admin/section_presenter }}

    <div class="tab-content">
        <form id="admin-groups-form" action="/plugins/svn/?group_id={{ project_id }}&action=save-admin-groups" method="post">
            <p>{{ admin_groups_description }}</p>

            <div class="control-group">
                <label for="admin_groups">{{ admin_groups_label }}</label>
                <select id="admin_groups" name="admin_groups[]" multiple="multiple" data-test="svn-admin-group-select">
                    {{# ugroups }}
                    <option value="{{ id }}" {{{ selected }}} >{{ name }}</option>
                    {{/ ugroups }}
                </select>
            </div>

            {{{ csrf_input }}}
            <input type="hidden" name="group_id" value="{{ project_id }}">
            <button type="submit" name="submit" class="btn btn-primary" data-test="svn-admin-save">
                <i class="fa fa-floppy-o"></i> {{ submit }}
            </button>
        </form>
    </div>
</div>
